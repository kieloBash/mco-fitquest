<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ProgramActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/program_activity_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:padding="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/program_activity_btn_prev"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/baseline_arrow_circle_left_24"
                app:backgroundTint="#d9d4d4" />


            <Button
                android:id="@+id/program_activity_btn_play"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/baseline_play_circle_filled_24"
                android:visibility="invisible"
                app:backgroundTint="#d9d4d4" />

            <Button
                android:id="@+id/program_activity_btn_next"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/baseline_arrow_circle_right_24"
                app:backgroundTint="#d9d4d4" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>